passo 1 
	sudo apt-get install dnsmasq hostapd
passo 2 
	sudo nano /etc/dhcpcd.conf
		denyinterfaces wlan0
passo 3 
	sudo nano /etc/network/interfaces
		allow-hotplug wlan0
		iface wlan0 inet static
		address 192.168.1.2 # ip desejado
		netmask 255.255.255.0
		network 192.168.1.1
		broadcast 192.168.1.255
		# wpa-conf /etc/wpa_supplicant/wpa_supplicant.conf
passo 4 
	sudo nano /etc/hostapd/hostapd.conf
		interface=wlan0
		driver=nl80211
		ssid=Raspberry-AP # nome da rede
		hw_mode=g
		channel=6
		macaddr_acl=0
		auth_algs=1
		ignore_broadcast_ssid=0
		wpa=2
		wpa_passphrase=raspberry # senha da rede
		wpa_key_mgmt=WPA-PSK
		rsn_pairwise=CCMP
passo 5 
	sudo nano /etc/default/hostapd
		DAEMON_CONF="/etc/hostapd/hostapd.conf" # Editar a linha 'DAEMON_CONF'
passo 6 
	sudo nano /etc/dnsmasq.conf
		interface=wlan0
		listen-address=192.168.1.2 # mesmo ip do passo 2
		bind-interfaces
		server=8.8.8.8
		domain-needed
		bogus-priv
		dhcp-range=192.168.1.120,192.168.1.254,12h
passo 7 
	sudo nano /etc/sysctl.conf
		descomentar a linha 'net.ipv4.ip_forward=1'
passo 8 
	sudo iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
	sudo iptables -A FORWARD -i eth0 -o wlan0 -m state --state RELATED,ESTABLISHED -j ACCEPT
	sudo iptables -A FORWARD -i wlan0 -o eth0 -j ACCEPT
passo 9 
	sudo sh -c "iptables-save > /etc/iptables.ipv4.nat"
passo 10 
	sudo nano /etc/rc.local
		iptables-restore < /etc/iptables.ipv4.nat
		/usr/sbin/hostapd /etc/hostapd/hostapd.conf
		service ssh restart
Login automatico:
passo 1
	sudo touch /etc/lightdm/lightdm.conf
	sudo nano /etc/lightdm/lightdm.conf
		[SeatDefaults]
		greeter-show-manual-login=true
		greeter-hide-users=true
		autologin-user=seunomedeuser
		autologin-user-timeout=0
Para remover:
	sudo rm -fR  /etc/lightdm/lightdm.conf
